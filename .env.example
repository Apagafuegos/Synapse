# Synapse Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration (optional - auto-detected)
# The database is automatically created at <project-root>/data/synapse.db
# Override only if you need a custom location:
# LOGLENS_DATABASE_PATH=/custom/path/to/synapse.db

# Server Configuration
HOST=0.0.0.0
PORT=3000
WORKERS=4

# AI Provider API Keys
# Uncomment and add your API keys as needed
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000

# Performance Settings
MAX_FILE_SIZE=52428800          # 50MB in bytes
MAX_ANALYSIS_LINES=50000

# Upload Configuration
# LOGLENS_UPLOAD_DIR=./uploads

# Frontend Configuration (for production deployment)
# LOGLENS_FRONTEND_DIR=synapse-web/frontend-react/dist

# CORS Configuration (comma-separated origins)
# LOGLENS_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
RUST_LOG=info
